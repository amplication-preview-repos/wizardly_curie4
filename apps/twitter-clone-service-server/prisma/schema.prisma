datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  likes     Like[]
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model Follow {
  createdAt    DateTime @default(now())
  followee     String?
  followeeUser String?
  follower     String?
  followerUser String?
  id           String   @id @default(cuid())
  updatedAt    DateTime @updatedAt
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt      DateTime @default(now())
  email          String?  @unique
  firstName      String?
  id             String   @id @default(cuid())
  lastName       String?
  likes          Like[]
  password       String
  profilePicture Json?
  roles          Json
  tweets         Tweet[]
  updatedAt      DateTime @updatedAt
  username       String   @unique
}
